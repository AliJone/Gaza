<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Catalog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css"> <!-- Make sure this file contains complementary custom styles -->
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Product Catalog" />
    <meta property="og:description" content="A platform to inform about products related to the conflict in Gaza." />
    <meta property="og:image" content="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1c/Stop_the_genocide_against_the_Palestinians.jpg/1200px-Stop_the_genocide_against_the_Palestinians.jpg" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://free-palestine.onrender.com/" /> 
</head>
<body>
    <div class="container mt-3">
        <% if (success_msg.length > 0) { %>
            <div class="alert alert-success">
                <%= success_msg %>
            </div>
        <% } %>
        <h3>Add New Product</h3>
        <form action="/add-product" method="post" enctype="application/x-www-form-urlencoded" class="mb-4">
            <!-- Form fields with clear labels -->
            <div class="form-group">
                <label for="productName">Product Name</label>
                <input type="text" id="productName" name="name" class="form-control" placeholder="Enter Product Name" required>
            </div>
            <div class="form-group">
                <label for="productDescription">Product Description</label>
                <textarea id="productDescription" name="productDescription" class="form-control" placeholder="Describe the Product" required></textarea>
            </div>
            <div class="form-group">
                <label for="categories">Categories</label>
                <input type="text" id="categories" name="categories" class="form-control" placeholder="Enter Categories (comma-separated)" required>
            </div>
            <div class="form-group">
                <label for="proofLink">Proof Link</label>
                <input type="url" id="proofLink" name="proofLink" class="form-control" placeholder="Enter Proof Link" required>
            </div>
            <div class="form-group">
                <label for="explanationText">Explanation Text (Optional)</label>
                <textarea id="explanationText" name="explanationText" class="form-control" placeholder="Enter Explanation Text"></textarea>
            </div>
            <div class="form-group">
                <label for="alternatives">Alternatives (Optional)</label>
                <textarea id="alternatives" name="alternatives" class="form-control" placeholder="Enter Alternatives"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Add Product</button>
        </form>
    </div>

    <!-- Improved Search Form Placement and Style -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form action="/search" method="get" class="mb-4">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Search products..." name="query">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Product Catalog Section -->
    <div class="container mt-5">
        <h2 class="mb-4">Product Catalog</h2>
        <div class="row">
            <% products.forEach(function(product) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= product.logo %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text"><%= product.productDescription %></p>
                            <a href="/product/<%= product._id %>" class="btn btn-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.9/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>
